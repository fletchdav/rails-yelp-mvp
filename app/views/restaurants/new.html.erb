
<div class="index-container col-xs-12 col-sm-6 col-sm-offset-3">
  <h1 class= "text-center">Add a restaurant</h1>
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :phone_number %>
    <%= f.input :address %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.submit "add a restaurant", class: "btn btn-primary" %>
  <% end %>
  <%= link_to "back to list", restaurants_path %>
</div>
